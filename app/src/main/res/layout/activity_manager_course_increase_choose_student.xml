<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择学生"
            android:layout_marginLeft="160dp"
            android:textColor="@color/white"
            android:textSize="22sp" />
        <Button
            android:layout_marginLeft="75dp"
            android:id="@+id/activity_manager_course_increase_choose_student_button_submit"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="确认"
            android:background="@drawable/round_stylebegin"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:text="已经选择的学生"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/activity_manager_course_increase_choose_student_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="未选择的学生"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/activity_manager_course_increase_choose_studentQuit_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

